{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "inputs": [
        {
            "id": "SaveBot",
            "type": "pickString",
            "description": "Choose the gtest filters:",
            "options": [
                "*"
            ]
        },
        {
            "id": "utilstest",
            "type": "pickString",
            "description": "Choose the gtest filters:",
            "options": [
                "*ConnectToSFTP"
            ]
        }
    ],
    "configurations": [
        {
            "name": "(Win) PersonWithMoney",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/src/PersonWithMoney/PersonWithMoney.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "(Win) Hierarchy",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/src/Hierarchy/Hierarchy.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "(Win) CommandQueue",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/src/CommandQueue/CommandQueue.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true
        },
        {
            "name": "(Linux) CommandQueue)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/bin/SaveBot",
            "args": [
                "--gmock_verbose=warning",
                "--gtest_filter='${input:SaveBot}'",
                "--stderr"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerArgs": "-x ${workspaceFolder}/build/.gdbinit",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "targetArchitecture": "x64",
            "linux": {
                "miDebuggerPath": "/usr/bin/gdb"
            }
        }
    ]
}